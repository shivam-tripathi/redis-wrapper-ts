{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "ES6",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "rootDir": ".",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
